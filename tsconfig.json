{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2022", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api": ["src/api"],
      "@components": ["src/components"],
      "@configs": ["src/configs"],
      "@core": ["src/core"],
      "@pages": ["src/pages"],
      "@router": ["src/router"]
    },
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["vite/client"],
    "skipLibCheck": true
  },
  "include": ["./**/*"]
}
