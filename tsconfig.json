{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "@spa",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@spa/jsx-runtime": ["src/core/spa/jsx-runtime.ts"],
      "@spa/jsx-dev-runtime": ["src/core/spa/jsx-dev-runtime.ts"],
      "@spa/*": ["src/core/spa/*"],
      "@api": ["src/api"],
      "@components": ["src/components"],
      "@configs": ["src/configs"],
      "@core": ["src/core"],
      "@pages/*": ["src/pages/*"],
      "@router": ["src/router"]
    },
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["vite/client"],
    "skipLibCheck": true
  },
  "include": ["./**/*"]
}
